<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit name="myPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.skyticket.entity.Airline</class>
        <class>com.example.skyticket.entity.Airport</class>
        <class>com.example.skyticket.entity.Flight</class>
        <class>com.example.skyticket.entity.Payment</class>
        <class>com.example.skyticket.entity.Role</class>
        <class>com.example.skyticket.entity.Seat</class>
        <class>com.example.skyticket.entity.Ticket</class>
        <class>com.example.skyticket.entity.User</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>
